<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="70dp"
    android:paddingRight="70dp"
    android:gravity="center_vertical"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="記錄說明"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/EDED2B"
            android:textSize="20dp"/>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="主遊戲玩的分數"/>
        <TextView
            android:id="@+id/tv_record_pa"
            android:textSize="18dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="開分總分數"/>
        <TextView
            android:id="@+id/tv_record_pb"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="主遊戲贏的分數"/>
        <TextView
            android:id="@+id/tv_win_ta"
            android:textSize="18dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="洗分總分數"/>
        <TextView
            android:id="@+id/tv_win_tb"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="主遊戲玩的次數"/>
        <TextView
            android:id="@+id/tv_win_pna"
            android:textSize="18dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="投幣總分數"/>
        <TextView
            android:id="@+id/tv_win_pnb"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="主遊戲贏的次數"/>
        <TextView
            android:id="@+id/tv_win_na"
            android:textSize="18dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="退幣總分數"/>
        <TextView
            android:id="@+id/tv_win_nb"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18dp"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="比倍玩的分數 "/>
        <TextView
            android:id="@+id/tv_double_sca"
            android:textSize="18dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="彩金分數"/>
        <TextView
            android:id="@+id/tv_double_scb"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18dp"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="比倍贏的分數"/>
        <TextView
            android:textSize="18dp"
            android:layout_width="120dp"
            android:id="@+id/tv_double_wa"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="彩金中獎次數"/>
        <TextView
            android:textSize="18dp"
            android:id="@+id/tv_double_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18dp"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="比倍贏的次數"/>
        <TextView
            android:textSize="18dp"
            android:layout_width="120dp"
            android:id="@+id/tv_double_wna"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18dp"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:textColor="@color/EDED2B"
            android:text="比倍輸的次數"/>
        <TextView
            android:textSize="18dp"
            android:id="@+id/tv_double_wnb"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
           />
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="19dp"
                android:text="軟件版本"
                android:textColor="@color/EDED2B"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="CO1"
                android:textColor="@color/white"/>
        </LinearLayout>
</LinearLayout>