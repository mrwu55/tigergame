<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/root_view">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
  <include
      android:id="@+id/lay_lay_a"
      layout="@layout/play_lay_a"
      />
  <include
      android:visibility="invisible"
      android:id="@+id/lay_lay_b"
      layout="@layout/play_lay_b"
      />
 </RelativeLayout>

 <RelativeLayout
     android:id="@+id/re_brand_bg"
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_marginLeft="24dp"
     android:layout_marginRight="24dp"
     android:layout_marginTop="5dp"
     android:layout_weight="1"
     >
  <pl.droidsonroids.gif.GifImageView
      android:id="@+id/img_play_startbg"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
  <LinearLayout
      android:id="@+id/ll_brand"
      android:visibility="invisible"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_brand_a"
        android:layout_width="85dp"
        android:background="@mipmap/play_no_p"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/img_hold_a"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/hold"
        android:layout_centerInParent="true"/>
   </RelativeLayout>
   <View
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1"/>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_brand_b"
        android:layout_width="85dp"
        android:background="@mipmap/play_no_p"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/img_hold_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/hold"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>
   </RelativeLayout>
   <View
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1"/>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_brand_c"
        android:layout_width="85dp"
        android:background="@mipmap/play_no_p"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/img_hold_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/hold"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>
   </RelativeLayout>
   <View
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1"/>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_brand_d"
        android:layout_width="85dp"
        android:background="@mipmap/play_no_p"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/img_hold_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/hold"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>
   </RelativeLayout>
   <View
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1"/>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_brand_e"
        android:layout_width="85dp"
        android:background="@mipmap/play_no_p"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/img_hold_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/hold"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>
   </RelativeLayout>
  </LinearLayout>
<LinearLayout
    android:id="@+id/ll_big_small"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:layout_marginLeft="41dp"
    android:orientation="horizontal">
   <ImageView
       android:id="@+id/img_bigsmall_no"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:background="@mipmap/play_no_p"/>
 <View
     android:layout_width="0dp"
     android:layout_weight="1"
     android:layout_height="match_parent"/>
 <RelativeLayout
     android:id="@+id/re_big_small"
     android:layout_width="wrap_content"
     android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_bigsamll_a"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/play_no_p"
        />
  <ImageView
      android:id="@+id/img_bigsamll_b"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:background="@mipmap/play_no_p"
      />
  <ImageView
      android:id="@+id/img_bigsamll_c"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:background="@mipmap/play_no_p"
     />
  <ImageView
      android:id="@+id/img_bigsamll_d"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:background="@mipmap/play_no_p"
      />
  <ImageView
      android:id="@+id/img_bigsamll_e"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:background="@mipmap/play_no_p"
      />
  <ImageView
      android:id="@+id/img_bigsamll_f"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:background="@mipmap/play_no_p"
      />
 </RelativeLayout>
</LinearLayout>
 </RelativeLayout>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="5dp"
     >
  <RelativeLayout
      android:layout_marginLeft="15dp"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="bottom|right"
       android:layout_marginLeft="100dp"
       android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="right|bottom"
        android:layout_weight="1">

     <Button
         android:id="@+id/btn_a_keepmachine"
         android:layout_width="wrap_content"
         android:layout_height="38dp"
         android:gravity="center_vertical"
         android:background="@null"
         android:text="留机"
         android:drawablePadding="3dp"
         android:textSize="18dp"
         android:textColor="@color/ce9cadf"
         android:drawableLeft="@drawable/play_btn_bg"
         />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="right|bottom"
        android:layout_weight="1">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="70dp"
         android:gravity="bottom"
         android:orientation="vertical">
      <TextView
          android:id="@+id/tv_play_big"
          android:layout_width="48dp"
          android:gravity="center"
          android:layout_height="30dp"
          android:textSize="18dp"
          android:visibility="invisible"
          android:textColor="@color/f2eb34"
          android:text="BIG"/>
      <Button
          android:id="@+id/btn_a_on"
          android:layout_width="wrap_content"
          android:layout_height="38dp"
          android:gravity="center_vertical"
          android:drawableLeft="@drawable/play_btn_bg"
          android:textColor="@color/ce9cadf"
          android:text="上分"
          android:textSize="18dp"
          android:drawablePadding="3dp"
          android:background="@null"/>
     </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="right|bottom"
        android:layout_weight="1">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="70dp"
         android:gravity="bottom"
         android:orientation="vertical">
      <TextView
          android:id="@+id/tv_play_small"
          android:layout_width="match_parent"
          android:gravity="center_vertical"
          android:layout_height="30dp"
          android:textSize="18dp"
          android:textColor="@color/f2eb34"
          android:visibility="invisible"
          android:text="SMALL"/>
      <Button
          android:id="@+id/btn_a_down"
          android:layout_width="wrap_content"
          android:layout_height="38dp"
          android:drawablePadding="3dp"
          android:textSize="18dp"
          android:gravity="center_vertical"
          android:textColor="@color/ce9cadf"
          android:text="下分"
          android:drawableLeft="@drawable/play_btn_bg"
          android:background="@null"/>

     </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="right|bottom"
        android:layout_weight="1">
     <Button
         android:id="@+id/btn_a_addbet"
         android:layout_width="wrap_content"
         android:layout_height="38dp"
         android:textSize="18dp"
         android:gravity="center_vertical"
         android:textColor="@color/ce9cadf"
         android:drawablePadding="3dp"
         android:text="押分"
         android:drawableLeft="@drawable/play_btn_bg"
         android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="right|bottom"
        android:layout_weight="1">
     <Button
         android:id="@+id/btn_a_begain"
         android:layout_width="wrap_content"
         android:layout_height="38dp"
         android:text="开始"
         android:gravity="center_vertical"
         android:textSize="18dp"
         android:textColor="@color/ce9cadf"
         android:drawablePadding="3dp"
         android:drawableLeft="@drawable/play_btn_bg"
         android:background="@null"/>
    </RelativeLayout>

   </LinearLayout>
   <LinearLayout
       android:layout_alignParentBottom="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">
    <TextView
        android:id="@+id/tv_a_machine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/c70bbb49"
        android:text="SF99号"
        />
    <TextView
        android:id="@+id/tv_a_machine_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textColor="@color/c70bbb49"
        android:text="金币：9999999"
        />
   </LinearLayout>
  </RelativeLayout>
  <RelativeLayout
      android:layout_marginLeft="45dp"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:gravity="center_vertical"
      >
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_a_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/f2eb34"
        android:text="CREDIT"
        />
    <TextView
        android:id="@+id/tv_a_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:text="0"
        />
   </LinearLayout>
   <TextView
       android:id="@+id/tv_a_hold"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="18dp"
       android:layout_centerHorizontal="true"
       android:textColor="@color/f2eb34"
       android:text="PUSH BET"
       />
   <LinearLayout
       android:layout_marginRight="35dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:gravity="right"
       android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/f2eb34"
        android:text="BET"
        />
    <TextView
        android:id="@+id/tv_a_bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="0"
        />
   </LinearLayout>

  </RelativeLayout>
 </RelativeLayout>

</LinearLayout>
 <LinearLayout
     android:layout_alignParentRight="true"
     android:layout_width="35dp"
     android:layout_marginTop="20dp"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:orientation="vertical">
  <Button
      android:id="@+id/btn_play_back"
      android:layout_width="25dp"
      android:layout_height="50dp"
      android:background="@drawable/play_back_bg"/>
  <Button
      android:id="@+id/btn_play_record"
      android:layout_width="25dp"
      android:layout_height="50dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/play_record_bg"/>
 </LinearLayout>
</RelativeLayout>
