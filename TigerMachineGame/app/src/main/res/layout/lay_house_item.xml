<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/img_seat"
        android:layout_width="59dp"
        android:layout_height="112dp"
        android:background="@mipmap/seat_girl"/>
    <TextView
        android:id="@+id/tv_seatnum"
        android:textColor="@color/colorffe11d"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:text="1"
        android:textSize="15dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_house"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_house_name"
            android:textSize="14dp"
            android:layout_marginTop="23dp"
            android:textColor="@color/ffff47"
            android:singleLine="true"
            android:maxLength="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.longfeng.panda.view.CountdownTextView
            android:id="@+id/tv_house_time"
            android:textSize="14dp"
            android:textColor="@color/ffff47"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>