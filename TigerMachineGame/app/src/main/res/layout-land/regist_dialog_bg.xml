<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relayout"
    android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="29dp"
            android:layout_width="400dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="29dp"
            android:background="@mipmap/regist_bg"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="37dp"
                android:paddingRight="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:typeface="sans"
                    android:textColor="@color/white"
                    android:text="邀  请  码："/>
                <EditText
                    android:id="@+id/edit_regist_code"
                    android:background="@drawable/regist_editext_bg"
                    android:layout_marginLeft="22dp"
                    android:typeface="sans"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:layout_width="0dp"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="37dp"
                android:paddingRight="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:typeface="sans"
                    android:textColor="@color/white"
                    android:text="账        户："/>
                <EditText
                    android:id="@+id/edit_regist_name"
                    android:background="@drawable/regist_editext_bg"
                    android:layout_marginLeft="22dp"
                    android:layout_width="0dp"
                    android:paddingLeft="5dp"
                    android:typeface="sans"
                    android:hint="2到8位中英文或数字"
                    android:textSize="16dp"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="37dp"
                android:paddingRight="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:typeface="sans"
                    android:textColor="@color/white"
                    android:text="密        码："/>
                <EditText
                    android:id="@+id/edit_regist_pss"
                    android:layout_marginLeft="22dp"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:paddingLeft="5dp"
                    android:hint="4到10位字母或数字"
                    android:typeface="sans"
                    android:inputType="textPassword"
                    android:digits="@string/input_limit"
                    android:textSize="16dp"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:background="@drawable/regist_editext_bg"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="37dp"
                android:paddingRight="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:typeface="sans"
                    android:textColor="@color/white"
                    android:text="确认密码："/>
                <EditText
                    android:id="@+id/edit_regist_surepss"
                    android:textColor="@color/black"
                    android:background="@drawable/regist_editext_bg"
                    android:hint="4到10位字母或数字"
                    android:typeface="sans"
                    android:inputType="textPassword"
                    android:digits="@string/input_limit"
                    android:textSize="16dp"
                    android:maxLength="10"
                    android:layout_marginLeft="21dp"
                    android:singleLine="true"
                    android:layout_width="0dp"
                    android:paddingLeft="5dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_regist_sure"
                        android:layout_width="81dp"
                        android:layout_height="38dp"
                        android:background="@drawable/regidtsure_btn"/>
                    <Button
                        android:id="@+id/btn_regist_cancel"
                        android:layout_width="81dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="53dp"
                        android:background="@drawable/registcancel_bg"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    <RelativeLayout
        android:layout_width="432dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp">
        <ImageView
            android:id="@+id/img_regist_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/regist_close_bg"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>